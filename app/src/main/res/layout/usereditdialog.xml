<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <soup.neumorphism.NeumorphTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit User"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            />
      <EditText
          android:id="@+id/dia_fname"
          android:hint="first_name"
          android:textColorHint="#7E7272"
          android:textColor="@color/black"
          android:layout_width="match_parent"
          android:layout_marginHorizontal="10dp"
          android:layout_marginVertical="2dp"
          android:layout_height="50dp"
          android:textSize="25dp"
          android:layout_gravity="center"
          android:paddingHorizontal="3dp"
          />
      <EditText
          android:id="@+id/dia_lname"
          android:hint="last_name"
          android:textColorHint="#7E7272"
          android:textColor="@color/black"
          android:layout_width="match_parent"
          android:layout_marginHorizontal="10dp"
          android:layout_marginVertical="2dp"
          android:layout_height="50dp"
          android:textSize="25dp"
          android:layout_gravity="center"
          android:paddingHorizontal="3dp"
          />
      <EditText
          android:id="@+id/dialog_age"
          android:hint="age"
          android:textColorHint="#7E7272"
          android:textColor="@color/black"
          android:layout_width="match_parent"
          android:layout_marginHorizontal="10dp"
          android:layout_marginVertical="2dp"
          android:layout_height="50dp"
          android:textSize="25dp"
          android:inputType="number"
          android:paddingHorizontal="3dp"
          android:maxWidth="250dp"
          android:maxLength="15"
          android:layout_gravity="center"
          />
      <soup.neumorphism.NeumorphButton
          android:id="@+id/Update_userbtn"
          android:layout_width="150dp"
          android:layout_height="70dp"
          android:layout_margin="30dp"
          android:text="Update User"
          android:textStyle="bold"
          android:textSize="20dp"
          app:neumorph_backgroundColor="#F3C107"
          android:textColor="@color/white"
          android:gravity="center"
          android:layout_gravity="right"
          />
    </LinearLayout>

</LinearLayout>

